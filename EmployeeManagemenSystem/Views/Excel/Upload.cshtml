@{
    ViewData["Title"] = "Carga Masiva de Usuarios";
    var errors = ViewBag.Errors as List<string>;
    var successMessage = ViewBag.SuccessMessage as string;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-file-earmark-excel"></i> Carga Masiva de Empleados</h4>
        </div>
        <div class="card-body">
            
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-info">
                    @successMessage
                </div>
            }

            <form asp-action="Import" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="file" class="form-label">Seleccione el archivo Excel (.xlsx)</label>
                    <input type="file" name="file" class="form-control" accept=".xlsx" required />
                    <div class="form-text">El archivo debe contener las columnas: Documento, Nombres, Apellidos, ...</div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-cloud-upload"></i> Procesar Archivo
                </button>
                <a asp-controller="Auth" asp-action="Dashboard" class="btn btn-secondary">Volver</a>
            </form>

            @if (errors != null && errors.Any())
            {
                <div class="mt-4">
                    <h5 class="text-danger">Errores Encontrados (@errors.Count)</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-danger">
                                <tr>
                                    <th>Detalle del Error</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var error in errors)
                                {
                                    <tr>
                                        <td>@error</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
